      <nav class="navbar-left">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item mx-1">
            <%= link_to 'Log out', destroy_catering_session_path, method: :delete, class: 'btn btn-sm btn-outline-danger' %>
