<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand mb-0 h1" href="<%= root_path %>">Zjadliwe</a>
    <% if user_signed_in? %>
      <nav class="navbar-left">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item mx-1">
            <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'btn btn-sm btn-outline-danger' %>
          </li>
          <li class="nav-item mx-1">
            <%= link_to 'Account', edit_user_registration_path, class: 'btn btn-sm btn-outline-primary' %>
          </li>
          <li class="nav-item mx-1">
            <%= link_to 'Order food', caterings_path, class: 'btn btn-sm btn-outline-primary' %>
