          <li class="nav-item mx-1">
            <%= link_to 'Change diet', users_edit_diet_path, class: 'btn btn-sm btn-outline-primary' %>
          </li>
          <li class="nav-item mx-1">
            <%= link_to 'Allergic ingredients', users_new_allergic_prefs_path, class: 'btn btn-sm btn-outline-primary' %>
